{
  "compilerOptions": {
    "target": "ES2020",                          // Good modern baseline for Node
    "module": "ESNext",                          // Or "ESNext" if using ESM
    "outDir": "dist",                            // Output directory for compiled JS
    "rootDir": "src",                            // Source TypeScript files location
    "moduleResolution": "bundler",                 // Node-style module resolution
    "esModuleInterop": true,                     // Allows import of CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,                              // Enables all strict type-checking options
    "skipLibCheck": true,                        // Skip checking .d.ts files
    "resolveJsonModule": true,                   // Allow importing .json files
    "allowJs": false,                            // Only allow .ts/.tsx files
    "noImplicitAny": true,                       // Prevent implicit `any` types
    "types": ["node"],                           // Include Node.js types
    "sourceMap": true                            // Helpful for debugging
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}